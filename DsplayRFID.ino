  Serial.begin(9600);
  SPI.begin(); // Init SPI bus
  rfid.PCD_Init(); // Init MFRC522
  pinMode(D8, OUTPUT); // Output
  display.setTextSize(2); 
  display.setTextColor(WHITE);
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);
}
void loop() {
      display.setCursor(0,28);
      display.println("Scan your    card");
      display.display();
      display.clearDisplay();
      delay(1000);
    
  if ( ! rfid.PICC_IsNewCardPresent())
    return;
  if (rfid.PICC_ReadCardSerial()) {
    for (byte i = 0; i < 4; i++) {
      tag += rfid.uid.uidByte[i];
    }
    Serial.println(tag); // This will print your rfid card tag
    if (tag == "48549130") {  // Put your preferred tag here
      display.setCursor(0,0);
      display.println("Access");
      display.println("Granted!");
      display.display();
      delay(1000);
      display.drawBitmap(0, 0, epd_bitmap_ok, 128, 64, WHITE);
      display.display();
      display.clearDisplay();
      delay(500);
      display.clearDisplay();
      digitalWrite(D8, HIGH);
      delay(5000);
      digitalWrite(D8, LOW);
    } else {
      
      display.setCursor(0,0);
      display.println("Access");
      display.println("Denied!");
      display.display();
      display.clearDisplay();
      delay(1000);
 
    }
    tag = "";
    rfid.PICC_HaltA();
    rfid.PCD_StopCrypto1();
  }
